    <style>
        .body {
            position: absolute;
            background-color: #ffffff;
            /* Used if the image is unavailable */
            height: 100px;
            /* You must set a specified height */
            background-position: center;
            /* Center the image */
            background-repeat: no-repeat;
            /* Do not repeat the image */
            filter: blur(5px);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: -1;
            height: 100vh;
            width: 100vw;
        }
    </style>

</head>

<body style="min-height: 100vh;">
    <div class="body">

    </div>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            TeacherHub
          </a>
        </div>
    </nav>

    <%- include('./partials/notify') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10 p-5" style="margin-top: 5vh;">
                        <form method="POST" action="/login" onsubmit="loading('1')">
                            <div class="mb-6 text-center">
                                <label for="exampleInputEmail1" class="form-label blockquote"><strong>
                                    </strong>Login</label>
                            </div>
                            <div class="mb-6">
                                <label for="exampleInputEmail1" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" placeholder="email" required value="<%= login_data.email?login_data.email:'' %>">
                            </div>
                            <div class="mb-6">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" placeholder="••••••••" required>
                            </div>
                            <div class="text-center mt-2" id="submitBtn1">
                                <button type="submit" name="submit" class="btn btn-primary" id="submitForm"
                                    value="Login">Login</button>
                            </div>
                            <div id="Loading1" style="display: none;" class="text-center mb-4">
                                <div class="spinner-border text-primary " role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10 p-5" style="margin-top: 5vh;">
                        <form method="POST" action="/register" onsubmit="loading('2')">
                            <div class="mb-6 text-center">
                                <label for="exampleInputEmail1" class="form-label blockquote"><strong>
                                    </strong>Register</label>
                            </div>
                            <div class="mb-6">
                                <label for="exampleInputEmail1" class="form-label">Full Name</label>
                                <input type="text" class="form-control" name="name" placeholder="name" value="<%= reg_data.name?reg_data.name:'' %>" required>
                            </div>
                            <div class="mb-6">
                                <label for="exampleInputEmail1" class="form-label">email</label>
                                <input type="email" class="form-control" name="email" placeholder="email" value="<%= reg_data.email?reg_data.email:'' %>" required>
                            </div>
                            <div class="mb-6">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" value="<%= reg_data.password?reg_data.password:'' %>" placeholder="••••••••" required>
                            </div>
                            <div class="mb-6">
                                <label for="exampleInputPassword1" class="form-label">Mobile</label>
                                <input type="tel" class="form-control" name="mobile" placeholder="XXXXXXXXXX" value="<%= reg_data.mobile?reg_data.mobile:'' %>" required  pattern="[0-9]{10}">
                            </div>
                            <div class="text-center mt-2" id="submitBtn2">
                                <button type="submit" name="submit" class="btn btn-primary" id="submitForm"
                                    value="Login">Register</button>
                            </div>
                            <div id="Loading2" style="display: none;" class="text-center mb-4">
                                <div class="spinner-border text-primary " role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
        </div>
    </div>

    
    <script>
        function loading(num) {
        document.getElementById('submitForm' + num).style.display = 'none'
        document.getElementById('Loading' + num).style.display = 'block'
    }
    </script>
    
    <script src="/js/bootstrap.min.js"></script>

</body>

</html>